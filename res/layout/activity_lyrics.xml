<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="10dp" >
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Here we are"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Riding the sky"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <com.example.shaderdemo.lyrics.LyricsView
        android:id="@+id/lyrics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Painting the night with sun"
        android:textColor="#888888"
        android:textSize="17sp"
        android:layout_marginBottom="12dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You and I mirrors of light"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Twin flames of fire"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lit in another time and place"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I knew you face"
        android:textColor="#888888"
        android:textSize="16sp"
        android:layout_marginBottom="12dp"/>
    
    <SeekBar 
        android:id="@+id/seekBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>
